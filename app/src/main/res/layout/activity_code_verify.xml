<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:background="#88A67E"
    tools:context=".CodeverifyActivity">


    <ImageView
        android:id="@+id/coverImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:srcCompat="@drawable/logo_2"
        android:contentDescription="Cover image"
        android:scaleType="centerCrop" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="کد تایید را وارد کنید"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Six single-character EditTexts with separators -->
        <EditText
            android:id="@+id/digit1"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/edittext_rounded" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/digit2"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/edittext_rounded" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/digit3"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/edittext_rounded" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/digit4"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/edittext_rounded" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/digit5"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/edittext_rounded" />

        <TextView
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:text="-"
            android:gravity="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/digit6"
            style="@style/Widget.AppCompat.EditText"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="1"
            android:textSize="18sp"
            android:layout_marginStart="6dp"
            android:background="@drawable/edittext_rounded" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="تایید" />

</LinearLayout>
