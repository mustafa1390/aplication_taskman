<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardTask"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Task Title -->
        <TextView
            android:id="@+id/tvTaskTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/tvDuringLive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task tvDuringLive"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FBFBFB"
            android:background="#090909"
            android:layoutDirection="rtl"
            android:layout_marginBottom="8dp" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/tvTaskDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />
        <TextView
            android:id="@+id/tvTaskPercent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Task Description"
            android:textSize="14sp"
            android:textColor="#666666"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginBottom="8dp" />


        <!-- Task Status and Priority -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">






            <TextView
                android:id="@+id/tvTaskPhase"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layoutDirection="rtl"
                android:text="Phase: High"
                android:textColor="#FBFBFB"
                android:background="#009688" />
            <TextView
            android:id="@+id/tvTaskProject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Priority: High"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layoutDirection="rtl"
            android:textColor="#FBFBFB"
            android:background="#651DE6" />


        </LinearLayout>

        <!-- Task Status and Priority -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:id="@+id/tvTaskUserId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="User ID: 799"
                android:textSize="12sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvTaskPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Priority: High"
                android:textSize="12sp"
                android:textColor="#666666" />







        </LinearLayout>

        <!-- Start and Stop buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btnStartTaskTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Start"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnStopTaskTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stop"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF"
                android:layout_marginStart="4dp" />

        </LinearLayout>


        <!-- Timer for inwork status -->
        <TextView
            android:id="@+id/tvTaskTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#2121E9"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
